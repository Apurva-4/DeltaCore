@{
    ViewData["Title"] = "Create Product";
}

@model DeltaCore.Models.Product

<div class="text-center">
    <h1 class="display-4">Create Product</h1>
</div>

<form asp-action="CreateEditProductForm">
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="ProductId" />

    <label class="mt-4">Product Name</label>
    <input class="form-control" type="text" placeholder="add product name" asp-for="Name" />

    <label class="mt-4">Description</label>
    <input class="form-control" type="string" placeholder="add description here" asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">OK</button>
</form>
